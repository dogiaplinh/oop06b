<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:control="clr-namespace:Oop06b.Controls"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        x:Class="Oop06b.MainWindow"
        Title="MainWindow"
        Height="673"
        Width="1006"
        ResizeMode="CanMinimize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Menu VerticalAlignment="Top"
              VerticalContentAlignment="Top">
            <MenuItem Header="Reset map"
                      Command="{Binding ResetMapCommand}" />
            <MenuItem Header="Find"
                      Command="{Binding FindPathCommand}" />
        </Menu>
        <Grid Grid.Row="1"
              x:Name="MapLayout">
            <control:MapControl DataContext="{Binding MapControl}" />
        </Grid>
        <StatusBar Grid.Row="2">
            <StatusBarItem Content="jsafj" />
        </StatusBar>
    </Grid>
</Window>